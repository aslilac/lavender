{
	"private": true,
	"workspaces": [
		"lavender",
		"lavender-app"
	],
	"devDependencies": {
		"@mckayla/prettier": "^1.0.3",
		"prettier": "~2.8.8"
	},
	"scripts": {
		"dev": "npm run dev -w @lavender/app",
		"start": "npm run start -w @lavender/app",
